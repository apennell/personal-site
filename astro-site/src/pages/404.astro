---
import Layout from "../layouts/page.astro";
---

<Layout>
  <div class="hero">
    <div class="hero-box">
      <h1>You found the 404 page!</h1>
      <p>
        If you&apos;re looking for something you think is supposed to exist
        here, please <a href="mailto:annie@sparkbird.works">let me know!</a>
      </p>
      <p>
        Otherwise, kindly make your way{" "}
        <a href="/">back to the main page.</a>
      </p>
    </div>
  </div>
</Layout>

<style>
  .hero {
    max-width: 25rem;
    margin: 2rem auto;
  }

  .hero-box {
    padding: 2rem;
    position: relative;
    background: var(--background);
    border: 4px solid var(--foreground);
    box-shadow: 8px 8px 0px var(--foreground);
  }

  /* Tablet and Smaller Desktop */
  @media (min-width: 701px) {
    .hero {
      max-width: 38rem;
      margin: 4rem auto;
    }
  }

  /* Large desktop */
  @media (min-width: 1121px) {
    .main {
      padding: 6rem;
    }
    .hero {
      max-width: 50rem;
    }
  }
</style>
